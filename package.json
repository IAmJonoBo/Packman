{
  "name": "packman-monorepo",
  "private": true,
  "version": "0.1.0",
  "packageManager": "pnpm@10.6.2",
  "scripts": {
    "build": "pnpm -r build",
    "test": "pnpm -r test",
    "typecheck": "pnpm -r typecheck",
    "preflight": "sh ./scripts/preflight.sh",
    "package:all": "pnpm -r pack",
    "build:exe": "sh ./scripts/build-executables.sh",
    "cli:py": "PYTHONPATH=./packman-py python -m packman_py.packman",
    "package:py": "sh ./scripts/build-python-dist.sh",
    "package:pyexe": "sh ./scripts/build-python-exe.sh",
    "package:executables": "sh ./scripts/build-executables.sh && sh ./scripts/build-python-exe.sh",
    "pack:planning:validate": "pnpm --filter packman-cli exec node dist/index.js validate ./Packs/copilot-project-management-planning-pack --strict --suite",
    "pack:planning:e2e": "sh ./scripts/pack-planning-e2e.sh",
    "governance:routes": "node ./scripts/check-route-ownership.mjs",
    "governance:mirrors": "node ./scripts/check-mirror-drift.mjs",
    "governance:packs:e2e": "pnpm --filter packman-cli run build && pnpm --filter packman-cli exec node dist/index.js validate ./Packs --strict --suite"
  }
}
